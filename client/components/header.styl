.header
  border-bottom: 1px solid #DDD
  margin-bottom: 20px
  background: #EEE
  height: 50px

.header_container
  clearfix()

.header_add-video
  border: 1px solid darken(green, 20%)
  text-decoration: none
  display: inline-block
  font-size: rem(14px)
  padding: 6px 10px
  background: green
  margin: 10px 0
  float: right
  color: #FFF

  box-shadow:
    inset 0 1px rgba(#FFF, 0.3),
    0 1px rgba(#000, 0.1)


.header_logo
  text-decoration: none
  display: inline-block
  font-size: rem(25px)
  font-weight: lignten
  margin: 10px 0
  color: #000

.header_logo span
  color: red

