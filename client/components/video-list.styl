.video-list
  display: flex
  flex-wrap: wrap
  margin-left: -20px

.video-list_item
  box-sizing: border-box
  margin-bottom: 20px
  padding-left: 20px
  flex-basis: 50%

.video-list_item_wrapper
  position: relative

.video-list_item_image
  background-color: #333
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  position: relative
  overflow: hidden
  display: block
  height: 219px

  &::before
    background: linear-gradient(rgba(#000, 0), rgba(#000, 0.8))
    position: absolute
    content: ""
    height: 50%
    opacity: 1
    bottom: 0
    right: 0
    left: 0

.video-list_item_image img
  margin-top: -38px

.video-list_item_title
  text-decoration: none
  font-weight: lighter
  white-space: nowrap
  overflow: hidden
  display: block
  color: #FFF

.video-list_item_info
  text-shadow: 1px 1px rgba(#000, 0.5)
  position: absolute
  padding: 10px
  color: #FFF
  bottom: 0
  right: 0
  left: 0

.video-list_item_title span
  text-overflow: ellipsis
  display: inline-block
  overflow: hidden
  width: 95%

.video-list_item_tags
  font-size: rem(10px)

.video-list_item_tag
  opacity: 0.4
  color: #FFF

  &:hover
    opacity: 0.7
